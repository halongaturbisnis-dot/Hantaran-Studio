import React, { useState, useEffect } from 'react';
import { 
  Camera, 
  Upload, 
  Scissors, 
  RefreshCw, 
  Download, 
  User, 
  AlertCircle,
  LayoutGrid,
  ChevronRight,
  Menu,
  X,
  History,
  Settings,
  Sparkles,
  Palette,
  Zap,
  Eye,
  Loader2,
  Image as ImageIcon,
  Wind
} from 'lucide-react';

const HAIR_CONFIG = {
  lengths: {
    'Bald': ['Shaved', 'Smooth Bald', 'Fuzz'],
    'Short': ['Fade', 'Undercut', 'Buzz Cut', 'Side Part', 'Crew Cut', 'French Crop', 'Ivy League', 'Caesar Cut', 'Mop Top', 'Hard Part'],
    'Medium': ['Pompadour', 'Mullet', 'Wolf Cut', 'Quiff', 'Modern Shag', 'Slick Back', 'Bro Flow', 'Blowout', 'Comb Over', 'Taper Fade'],
    'Long': ['Man Bun', 'Shoulder Length', 'Layered', 'Braids', 'Surfer Hair', 'Top Knot', 'Dreadlocks', 'Long Waves', 'Curtains']
  },
  textures: ['Straight', 'Wavy', 'Curly', 'Coily', 'Kinky', 'Fine', 'Thick'],
  colors: {
    'Black': ['Solid Natural', 'Soft Charcoal', 'Blue Black'],
    'Brown': ['Caramel Balayage', 'Coffee Tint', 'Chocolate Brown', 'Ash Brown'],
    'Blonde': ['Honey Highlights', 'Golden Sun-kissed', 'Dirty Blonde'],
    'Platinum': ['Icy White', 'Silver Ash', 'Frosty'],
    'Fashion': ['Blue Ombre', 'Crimson Red', 'Neon Pink', 'Pastel Purple']
  }
};

const API_KEY = ""; 
const MODEL_NAME = "gemini-2.5-flash-image-preview";

const App = () => {
  const [isSidebarOpen, setIsSidebarOpen] = useState(true);
  const [previewUrl, setPreviewUrl] = useState(null);
  const [refImageUrl, setRefImageUrl] = useState(null);
  const [isGenerating, setIsGenerating] = useState(false);
  const [genStatus, setGenStatus] = useState("");
  const [generatedResults, setGeneratedResults] = useState([]); 
  const [error, setError] = useState(null);

  // Form States
  const [length, setLength] = useState('Short');
  const [style, setStyle] = useState('Fade');
  const [texture, setTexture] = useState('Straight');
  const [color, setColor] = useState('Black');
  const [styling, setStyling] = useState('Solid Natural');
  const [isAiRecommended, setIsAiRecommended] = useState(false);

  useEffect(() => {
    setStyle(HAIR_CONFIG.lengths[length][0]);
  }, [length]);

  useEffect(() => {
    setStyling(HAIR_CONFIG.colors[color][0]);
  }, [color]);

  const handleImageChange = (e, type) => {
    const file = e.target.files[0];
    if (file) {
      if (file.size > 5 * 1024 * 1024) {
        setError("Ukuran file terlalu besar. Maksimal 5MB.");
        return;
      }
      const reader = new FileReader();
      reader.onloadend = () => {
        if (type === 'user') {
          setPreviewUrl(reader.result);
          setGeneratedResults([]);
        } else {
          setRefImageUrl(reader.result);
          setIsAiRecommended(false); // Disable AI Rec if Ref image is uploaded
        }
      };
      reader.readAsDataURL(file);
    }
  };

  const callGeminiImageAPI = async (base64Data, prompt, refImage = null, retries = 5, backoff = 1000) => {
    const parts = [{ text: prompt }];
    
    if (refImage) {
      parts.push({ inlineData: { mimeType: "image/png", data: refImage.split(',')[1] } });
      parts.push({ text: "Analisa gaya rambut, tekstur, dan teknik pewarnaan (seperti ombre/balayage) dari foto referensi ini. Terapkan secara akurat ke foto user." });
    }

    parts.push({ inlineData: { mimeType: "image/png", data: base64Data.split(',')[1] } });

    const payload = {
      contents: [{ parts }],
      generationConfig: { responseModalities: ["IMAGE"] }
    };

    try {
      const response = await fetch(
        `https://generativelanguage.googleapis.com/v1beta/models/${MODEL_NAME}:generateContent?key=${API_KEY}`,
        {
          method: 'POST',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify(payload)
        }
      );
      if (!response.ok) throw new Error(`API Error: ${response.status}`);
      const result = await response.json();
      const base64Image = result.candidates?.[0]?.content?.parts?.find(p => p.inlineData)?.inlineData?.data;
      if (!base64Image) throw new Error("Gagal menghasilkan gambar.");
      return `data:image/png;base64,${base64Image}`;
    } catch (err) {
      if (retries > 0) {
        await new Promise(resolve => setTimeout(resolve, backoff));
        return callGeminiImageAPI(base64Data, prompt, refImage, retries - 1, backoff * 2);
      }
      throw err;
    }
  };

  const handleGenerate = async () => {
    if (!previewUrl) return;
    setIsGenerating(true);
    setError(null);
    setGeneratedResults([]);

    try {
      const finalResults = [];
      const variants = [
        "Gaya Klasik & Rapi (Clean Finish)",
        "Gaya Bertekstur & Natural (Messy/Wavy)",
        "Gaya Bervolume Tinggi (High Volume/Slick)",
        "Gaya Modern & Edgy (Fashion Look)"
      ];

      for (let i = 0; i < variants.length; i++) {
        setGenStatus(`Menghasilkan Variasi ${i + 1}: ${variants[i]}...`);
        
        let prompt = `IDENTITY PRESERVATION: Keep the user's face, eyes, and background identical.
        Sudut Pandang: TAMPAK DEPAN (FRONT VIEW).
        Variasi ${i + 1}: ${variants[i]}.
        `;

        if (refImageUrl) {
          prompt += `Terapkan gaya rambut persis seperti pada foto referensi yang disediakan, namun buatlah versi ${variants[i]} dari gaya tersebut. Pastikan teknik pewarnaan (color styling seperti ombre/balayage) juga ditiru.`;
        } else if (isAiRecommended) {
          prompt += `Analisa bentuk wajah user dan rekomendasikan gaya rambut terbaik yang paling cocok. Buatlah versi ${variants[i]} dari rekomendasi tersebut.`;
        } else {
          prompt += `Gunakan parameter: Panjang ${length}, Gaya ${style}, Tekstur ${texture}, Warna ${color} dengan teknik styling ${styling} (ombre/balayage/solid). Buatlah versi ${variants[i]} dari preset ini.`;
        }

        const img = await callGeminiImageAPI(previewUrl, prompt, refImageUrl);
        finalResults.push({ view: variants[i], url: img });
      }

      setGeneratedResults(finalResults);
      setGenStatus("Selesai!");
    } catch (err) {
      setError("Gagal memproses gambar. Silakan coba lagi.");
    } finally {
      setIsGenerating(false);
      setTimeout(() => setGenStatus(""), 3000);
    }
  };

  const resetApp = () => {
    setPreviewUrl(null);
    setRefImageUrl(null);
    setGeneratedResults([]);
    setError(null);
    setGenStatus("");
    setIsAiRecommended(false);
  };

  const isManualDisabled = !!refImageUrl || isAiRecommended;

  return (
    <div className="flex min-h-screen bg-neutral-950 text-neutral-100 font-sans overflow-hidden">
      
      {/* Sidebar */}
      <aside className={`fixed inset-y-0 left-0 z-50 bg-neutral-900 border-r border-white/10 transition-all duration-300 ${isSidebarOpen ? 'w-64 translate-x-0' : 'w-20 translate-x-0'} md:relative md:translate-x-0`}>
        <div className="flex flex-col h-full">
          <div className="h-16 flex items-center px-6 border-b border-white/10 shrink-0">
            <div className="bg-blue-600 p-2 rounded-lg shrink-0"><Scissors size={20} className="text-white" /></div>
            {isSidebarOpen && <span className="ml-3 font-bold text-sm tracking-tighter">BARBER <span className="text-blue-500 font-light italic">PRO</span></span>}
          </div>
          <nav className="flex-1 py-6 px-3 space-y-2 overflow-y-auto">
            {[{ id: 'tryon', label: 'Try On AI', icon: Sparkles, active: true }, { id: 'history', label: 'Riwayat', icon: History, active: false }].map((item) => (
              <button key={item.id} className={`w-full flex items-center p-3 rounded-xl transition-colors ${item.active ? 'bg-blue-600 text-white font-bold shadow-lg shadow-blue-900/40' : 'hover:bg-white/5 text-neutral-400'}`}>
                <item.icon size={20} />
                {isSidebarOpen && <span className="ml-4 text-sm">{item.label}</span>}
              </button>
            ))}
          </nav>
          <div className="p-4 border-t border-white/10">
            <button onClick={() => setIsSidebarOpen(!isSidebarOpen)} className="w-full flex items-center justify-center p-2 rounded-lg bg-white/5 hover:bg-white/10 transition-colors">
              {isSidebarOpen ? <X size={18} /> : <Menu size={18} />}
            </button>
          </div>
        </div>
      </aside>

      <div className="flex-1 flex flex-col min-w-0 h-screen overflow-y-auto">
        <header className="h-16 flex items-center justify-between px-6 bg-black/50 backdrop-blur-md border-b border-white/10 sticky top-0 z-40 shrink-0">
          <h2 className="text-xs font-bold text-neutral-400 uppercase tracking-widest">Digital Barber Studio v2.5</h2>
          <button onClick={resetApp} className="text-xs font-bold px-4 py-2 rounded-full border border-white/10 hover:bg-white/5 transition-all flex items-center gap-2">
            <RefreshCw size={12} /> Reset
          </button>
        </header>

        <main className="flex-1 p-6 md:p-8 space-y-8 max-w-7xl mx-auto w-full">
          
          <div className="grid grid-cols-1 lg:grid-cols-12 gap-8 items-start">
            {/* Input & Reference Section */}
            <div className="lg:col-span-3 space-y-6">
              <div className="bg-neutral-900 border border-white/10 rounded-3xl p-4 shadow-2xl">
                <h3 className="text-xs font-bold text-blue-500 mb-4 flex items-center gap-2 uppercase tracking-tighter"><Camera size={14} /> 1. Foto User</h3>
                <div className={`relative aspect-square rounded-2xl border-2 border-dashed overflow-hidden group transition-all ${!previewUrl ? 'border-white/10 hover:border-blue-500/50 bg-white/5' : 'border-blue-500/50'}`}>
                  {previewUrl ? (
                    <img src={previewUrl} alt="Preview" className="w-full h-full object-cover" />
                  ) : (
                    <label className="w-full h-full flex flex-col items-center justify-center cursor-pointer p-4 text-center">
                      <Upload className="text-neutral-600 mb-2" size={24} />
                      <p className="text-[10px] font-bold text-neutral-400 uppercase">Pilih Foto</p>
                      <input type="file" className="hidden" accept="image/*" onChange={(e) => handleImageChange(e, 'user')} />
                    </label>
                  )}
                </div>
              </div>

              <div className="bg-neutral-900 border border-white/10 rounded-3xl p-4 shadow-2xl">
                <h3 className="text-xs font-bold text-blue-400 mb-4 flex items-center gap-2 uppercase tracking-tighter"><ImageIcon size={14} /> 2. Referensi Gaya</h3>
                <div className={`relative aspect-video rounded-2xl border-2 border-dashed overflow-hidden group transition-all ${!refImageUrl ? 'border-white/10 hover:border-blue-400/50 bg-white/5' : 'border-blue-400/50'}`}>
                  {refImageUrl ? (
                    <div className="relative h-full">
                      <img src={refImageUrl} alt="Ref" className="w-full h-full object-cover" />
                      <button onClick={() => setRefImageUrl(null)} className="absolute top-2 right-2 p-1 bg-black/50 rounded-full hover:bg-red-500 transition-colors">
                        <X size={12} />
                      </button>
                    </div>
                  ) : (
                    <label className="w-full h-full flex flex-col items-center justify-center cursor-pointer p-4 text-center">
                      <Upload className="text-neutral-600 mb-2" size={20} />
                      <p className="text-[10px] font-bold text-neutral-400 uppercase leading-tight">Gunakan Foto<br/>Referensi</p>
                      <input type="file" className="hidden" accept="image/*" onChange={(e) => handleImageChange(e, 'ref')} />
                    </label>
                  )}
                </div>
              </div>

              <div className={`bg-neutral-900 border border-white/10 rounded-2xl p-4 flex items-center justify-between transition-opacity ${refImageUrl ? 'opacity-30 pointer-events-none' : 'opacity-100'}`}>
                <div className="flex items-center gap-2">
                  <Zap size={14} className={isAiRecommended ? "text-blue-500" : "text-neutral-600"} />
                  <span className="text-xs font-bold">AI Recommendation</span>
                </div>
                <button 
                  onClick={() => setIsAiRecommended(!isAiRecommended)} 
                  className={`w-10 h-5 rounded-full relative transition-colors ${isAiRecommended ? 'bg-blue-600' : 'bg-neutral-800'}`}
                >
                  <div className={`absolute top-1 w-3 h-3 bg-white rounded-full transition-all ${isAiRecommended ? 'right-1' : 'left-1'}`} />
                </button>
              </div>
            </div>

            {/* Config Section */}
            <div className="lg:col-span-9">
              <div className={`bg-neutral-900 border border-white/10 rounded-3xl p-6 shadow-2xl transition-all ${isManualDisabled ? 'opacity-30 grayscale pointer-events-none' : 'opacity-100'}`}>
                <div className="grid grid-cols-1 md:grid-cols-2 gap-8">
                  <div className="space-y-4">
                    <h3 className="text-xs font-bold text-blue-500 flex items-center gap-2 uppercase tracking-tighter"><Scissors size={14} /> Konfigurasi Utama</h3>
                    <div className="space-y-3">
                      <div className="space-y-1">
                        <label className="text-[9px] font-bold text-neutral-500 uppercase ml-1">Panjang Rambut</label>
                        <select value={length} onChange={(e) => setLength(e.target.value)} className="w-full bg-neutral-800 border border-white/10 rounded-xl px-4 py-3 text-sm focus:ring-1 focus:ring-blue-500 outline-none">
                          {Object.keys(HAIR_CONFIG.lengths).map(l => <option key={l} value={l}>{l}</option>)}
                        </select>
                      </div>
                      <div className="space-y-1">
                        <label className="text-[9px] font-bold text-neutral-500 uppercase ml-1">Gaya Spesifik</label>
                        <select value={style} onChange={(e) => setStyle(e.target.value)} className="w-full bg-neutral-800 border border-white/10 rounded-xl px-4 py-3 text-sm focus:ring-1 focus:ring-blue-500 outline-none">
                          {HAIR_CONFIG.lengths[length].map(s => <option key={s} value={s}>{s}</option>)}
                        </select>
                      </div>
                      <div className="space-y-1">
                        <label className="text-[9px] font-bold text-neutral-500 uppercase ml-1">Tekstur Rambut</label>
                        <select value={texture} onChange={(e) => setTexture(e.target.value)} className="w-full bg-neutral-800 border border-white/10 rounded-xl px-4 py-3 text-sm focus:ring-1 focus:ring-blue-500 outline-none">
                          {HAIR_CONFIG.textures.map(t => <option key={t} value={t}>{t}</option>)}
                        </select>
                      </div>
                    </div>
                  </div>
                  <div className="space-y-4">
                    <h3 className="text-xs font-bold text-blue-500 flex items-center gap-2 uppercase tracking-tighter"><Palette size={14} /> Pewarnaan</h3>
                    <div className="space-y-3">
                      <div className="space-y-1">
                        <label className="text-[9px] font-bold text-neutral-500 uppercase ml-1">Warna Dasar</label>
                        <select value={color} onChange={(e) => setColor(e.target.value)} className="w-full bg-neutral-800 border border-white/10 rounded-xl px-4 py-3 text-sm focus:ring-1 focus:ring-blue-500 outline-none">
                          {Object.keys(HAIR_CONFIG.colors).map(c => <option key={c} value={c}>{c}</option>)}
                        </select>
                      </div>
                      <div className="space-y-1">
                        <label className="text-[9px] font-bold text-neutral-500 uppercase ml-1">Teknik Styling (Coloring)</label>
                        <select value={styling} onChange={(e) => setStyling(e.target.value)} className="w-full bg-neutral-800 border border-white/10 rounded-xl px-4 py-3 text-sm focus:ring-1 focus:ring-blue-500 outline-none">
                          {HAIR_CONFIG.colors[color].map(st => <option key={st} value={st}>{st}</option>)}
                        </select>
                      </div>
                    </div>
                  </div>
                </div>
                
                <div className="mt-8 p-4 bg-blue-500/5 border border-blue-500/10 rounded-2xl flex items-start gap-3">
                  <Wind size={16} className="text-blue-500 mt-1 shrink-0" />
                  <p className="text-[11px] text-neutral-400 leading-relaxed italic">
                    {refImageUrl ? "Mode Referensi: AI akan meniru gaya rambut pada foto referensi secara detail." : 
                     isAiRecommended ? "Mode AI: Algoritma kami akan memilihkan gaya terbaik untuk Anda." :
                     "Mode Manual: Gunakan preset di atas untuk kustomisasi gaya rambut Anda sendiri."}
                  </p>
                </div>
              </div>

              <div className="flex justify-end pt-8">
                <button 
                  disabled={isGenerating || !previewUrl} 
                  onClick={handleGenerate} 
                  className={`h-14 px-12 rounded-2xl font-black text-white transition-all flex items-center justify-center gap-3 shadow-xl ${isGenerating || !previewUrl ? 'bg-neutral-800 text-neutral-500' : 'bg-blue-600 hover:bg-blue-500 shadow-blue-900/40 active:scale-95'}`}
                >
                  {isGenerating ? <Loader2 className="animate-spin" size={20} /> : <>GENERATE 4 VARIAN <ChevronRight size={18} /></>}
                </button>
              </div>
            </div>
          </div>

          {/* Results Reveal Area */}
          <div className="space-y-6 mt-8">
            <div className="flex items-center justify-between border-b border-white/5 pb-4">
              <h3 className="text-xs font-bold text-blue-500 flex items-center gap-2 uppercase tracking-tighter">
                <LayoutGrid size={14} /> Hasil Try-On (Tampak Depan)
              </h3>
              {genStatus && <span className="text-[10px] font-black text-blue-400 bg-blue-500/10 px-3 py-1 rounded-full animate-pulse uppercase">{genStatus}</span>}
            </div>
            
            <div className="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-6">
              {isGenerating ? (
                [1, 2, 3, 4].map(i => (
                  <div key={i} className="aspect-[3/4] bg-neutral-900 rounded-3xl border border-white/5 flex flex-col items-center justify-center animate-pulse shrink-0">
                    <Sparkles className="text-blue-900/40 mb-3" size={32} />
                    <div className="h-2 w-16 bg-white/5 rounded" />
                  </div>
                ))
              ) : generatedResults.length > 0 ? (
                generatedResults.map((res, idx) => (
                  <div key={idx} className="group relative animate-in fade-in zoom-in duration-700">
                    <div className="aspect-[3/4] rounded-3xl overflow-hidden bg-neutral-900 border border-white/10 shadow-2xl relative">
                      <img src={res.url} alt={res.view} className="w-full h-full object-cover group-hover:scale-105 transition-transform duration-1000" />
                      <div className="absolute inset-0 bg-gradient-to-t from-black/80 via-transparent to-transparent opacity-60" />
                      <div className="absolute top-4 left-4">
                        <span className="px-3 py-1 bg-blue-600/90 backdrop-blur-sm text-white text-[10px] font-black rounded-full uppercase shadow-lg border border-white/10">
                          {res.view}
                        </span>
                      </div>
                      <div className="absolute inset-x-0 bottom-0 p-4 opacity-0 group-hover:opacity-100 transition-all duration-300">
                        <button 
                          onClick={() => { const link = document.createElement('a'); link.href = res.url; link.download = `variasi-${idx+1}.png`; link.click(); }} 
                          className="w-full py-2.5 bg-white text-black rounded-xl text-[10px] font-black flex items-center justify-center gap-2 hover:bg-blue-500 hover:text-white transition-colors"
                        >
                          <Download size={14} /> UNDUH
                        </button>
                      </div>
                    </div>
                  </div>
                ))
              ) : (
                <div className="col-span-full h-64 flex flex-col items-center justify-center bg-white/[0.02] border-2 border-dashed border-white/5 rounded-3xl opacity-40">
                  <Eye className="text-neutral-800 mb-4" size={48} />
                  <p className="text-neutral-600 text-xs font-bold uppercase tracking-widest text-center px-6">
                    {refImageUrl ? "Foto referensi terdeteksi. AI akan memproses 4 variasi gaya tersebut." : "Pilih parameter atau upload referensi untuk melihat transformasi."}
                  </p>
                </div>
              )}
            </div>
          </div>
        </main>
      </div>
    </div>
  );
};

export default App;
